{
    "variables": {
        "region"        : "",
        "source_ami"    : "",
        "build_subnet"  : "",
        "build_vpc"     : "",
        "build_sg"      : "",
        "www_dir"     : ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `region`}}",
        "source_ami": "{{user `source_ami`}}",
        "instance_type": "t2.medium",
        "subnet_id": "{{user `build_subnet`}}",
        "vpc_id": "{{user `build_vpc`}}",
        "security_group_id": "{{user `build_sg`}}",
        "associate_public_ip_address": "false",
        "ssh_username": "ubuntu",
        "ssh_private_ip": "true",
        "ssh_timeout": "120s",
        "ami_name": "demo-{{isotime \"2006-01-02T15-04-05\"}}"
    }],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 10",
                "mkdir -p /tmp/www"
            ]
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/scripts/install_packages.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "file",
            "source": "{{user `www_dir`}}",
            "destination": "/tmp/html"
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/scripts/config_site.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        }
    ]
}
