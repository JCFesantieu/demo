{
    "variables": {
        "region"        : "eu-west-1",
        "source_ami"    : null,
        "build_subnet"  : null,
        "build_vpc"     : null,
        "build_sg"      : null,
        "ssh_private"   : "true",
        "public_ip"     : "false",
        "source_dir"     : null
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `region`}}",
        "source_ami": "{{user `source_ami`}}",
        "instance_type": "t2.medium",
        "subnet_id": "{{user `build_subnet`}}",
        "vpc_id": "{{user `build_vpc`}}",
        "security_group_id": "{{user `build_sg`}}",
        "associate_public_ip_address": "{{user `public_ip`}}",
        "ssh_private_ip": "{{user `ssh_private`}}",
        "ssh_username": "admin",
        "ssh_timeout": "300s",
        "ami_name": "demo-{{isotime \"2006-01-02T15-04-05\"}}"
    }],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 10",
                "mkdir -p /tmp/www"
            ]
        },
        {
            "type": "shell",
            "script": "{{user `source_dir`}}/scripts/install_packages.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "file",
            "source": "{{user `source_dir`}}/site/composer.json",
            "destination": "/tmp/composer.json"
        },
        {
            "type": "shell",
            "script": "{{user `source_dir`}}/scripts/install_php_archives.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "file",
            "source": "{{user `source_dir`}}/site",
            "destination": "/tmp/html"
        },
        {
            "type": "shell",
            "script": "{{user `source_dir`}}/scripts/config_site.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        }
    ]
}
